                                li
                                    a.name-item Thuốc
                                li
                                    a.name-item Hóa chất, chế phẩm diệt côn trùng, diệt khuẩn dùng trong lĩnh vực gia dụng và y tế
                                li
                                    a.name-item Sữa và sản phẩm dinh dưỡng cho trẻ trên 24 tháng tuổi
                                li
                                    a.name-item Thực phẩm, phụ gia thực phẩm
                                li
                                    a.name-item Rượu có độ cồn dưới 15 độ và bia
                                li
                                    a.name-item Dịch vụ khám bệnh, chữa bệnh (bao gồm phòng khám nha khoa, thẩm mỹ viện có các chức năng phẫu thuật, dao kéo)
                                li
                                    a.name-item Trang thiết bị y tế
                                li
                                    a.name-item Thuốc và vật tư bảo vệ thực vật, sinh vật, thú y nói chung
                                li
                                    a.name-item Trò chơi điện tử
                                li
                                    a.name-item Dịch vụ vui chơi, giải trí cho đối tượng từ 16 tuổi trở lên
                                li
                                    a.name-item Dịch vụ về visa hộ chiếu
                                li
                                    a.name-item Sản phẩm dao kéo, dụng cụ nhà bếp
                                li
                                    a.name-item Tín dụng, tín chấp, dịch vụ tài chính cho vay, mượn tiền, đầu tư quỹ
                                li
                                    a.name-item Hẹn hò online
                                li
                                    a.name-item Dịch vụ cầm đồ
                                li
                                    a.name-item Xổ số
                .text-input-item(style="opacity: 0")
                    .label-title
                        h3.title Xuất xứ hàng hóa
                            span &nbsp;(không bắt buộc)
                    .controls
                        .control
                            input(id="check0" type="checkbox")
                            label(for="check0") Nhập khẩu theo đường chính ngạch
                        .control
                            input(id="check1" type="checkbox")
                            label(for="check1") Trung Quốc, Lào, Campuchia, Thái Lan
                        .control
                            input(id="check2" type="checkbox")
                            label(for="check2") Hàng có thương hiệu nổi tiếng
                .text-input-item(style="opacity: 0;margin-bottom: 72px;")
                    .label-title
                        h3.title Hình ảnh quảng cáo
                            span &nbsp;(không bắt buộc)
                    .controls
                        .control
                            input(id="check4" type="checkbox")
                            label(for="check4") Có người nhìn rõ mặt trên banner
                        .control
                            input(id="check5" type="checkbox")
                            label(for="check5") Có người nổi tiếng trong landing page
                button.button.is-primary.is-large#check-form-ad(disabled) Tra cứu
                button.button.is-large#refresh-searching(disabled) Làm mới
    .slide-body
        img#img-empty(src="./images/zad_empty.png")
