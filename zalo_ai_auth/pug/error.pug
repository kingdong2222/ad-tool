extends layout.pug

//- Setting
block setting
	- var layout = true
	- var loading = false
	- var dockbar = true
	- var tooltip = false
	- var popup = false
	- var modal = true
	- var exception = 4 // error

block head
	include head.pug

block pages
	- bodyC.push("")
	- layoutClasses.push("ad-mobile")
	- bodyClasses.push("page-content")
	- dockbarClasses.push("dockbar")

//- Add Body
block body
	include page/_exception_page.pug

//- Add Dockbar
block dockbar
	include page/dockbar.pug

//- Add Modal
block modal
	include page/modal_alert.pug
	
//- Add Popup
block popup

block javaScripts extend
	script.
		$("html").addClass("overlay-modal");
		$("#modal-alert-1").addClass("is-show");
		
		$(".func-close-modal").click(function(){
			$("html").removeClass("overlay-modal");
			$(".modal-container").removeClass("is-show");
		});