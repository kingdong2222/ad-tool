include config.pug
block setting
	- var header = true
	- var footer = true
	- var sidebar = false
	- var navbar = false
	- var modal = true

doctype
html(lang="en")
	head
		block head
	// Include Plugin
	block javaScripts
		include javascript.pug
	//- add class for wrapper
	- var bodyC = [];
	- var layoutClasses= [];
	- var headerClasses = [];
	- var bodyClasses = [];
	- var footerClasses = [];
	block pages
	body(class=`${bodyC}`)
		div(data-off='slidebar left overlay')
			.slidebar-container
				.user-info
					.avatar.avatar--m
						span.avatar-img(style="background-image:url(https://via.placeholder.com/150x150)")
					.desc
						span Laguna Laguna Laguna Loire
				.search-input-form
					input(type="text" placeholder="Nhập nội dung cần tìm...")
					a.button-search
						i.icn.icn-search
				ul
					li.menu-item.current-menu-item
						a(href='#!', aria-current='page') Home
					li.menu-item
						a(href='#!') Giới thiệu
					li.menu-item
						a(href='#!') Hướng dẫn
					li.menu-item.menu-item-has-children
						a(href='#!') Tài nguyên
					li.menu-item
						a.func-modal-form(href='javascript:void(0)') Liên hệ tư vấn
					li.menu-item
						a(href='#!') Hỗ trợ
				
		if layout
			.wrapper(data-name='container')
				block layout
				if header
					header.clear(class=`${headerClasses}` role='banner')
						block header
				main(role='main')
					block body
				if footer
					.section-cta
						.context
							p Tiếp cận 100 triệu khách hàng tiềm năng trên hệ sinh thái Zalo
							h2 Bạn đã sẵn sàng bắt đầu với Zalo Ads?
							.buttons.is-centered
								a.button(href="#!") Tạo quảng cáo ngay
					footer(class=`${footerClasses}`)
						block footer
				
		if modal
			block modal

		
			
		block javaScripts extend
			