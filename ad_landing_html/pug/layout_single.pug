include config.pug
block setting
	- var header = true
	- var footer = true
	- var sidebar = false
	- var navbar = false
	- var modal = true

doctype
html(lang="en")
	head
		block head

	//- add class for wrapper
	- var bodyC = [];
	- var layoutClasses= [];
	- var headerClasses = [];
	- var bodyClasses = [];
	- var footerClasses = [];
	block pages
    
	body(class=`${bodyC}`)
		if layout
			main(role='main')
					block body
			if footer	
				footer(class=`${footerClasses}`)
					block footer	
		if modal
			block modal

		// Include Plugin
		block javaScripts
			include javascript.pug
			
		block javaScripts extend
			