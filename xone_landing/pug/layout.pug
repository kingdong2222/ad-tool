include config.pug
block setting
	- var header = true
	- var footer = true
	- var modal = true

doctype
html(lang="en")
	head
		block head

	//- add class for wrapper
	- var bodyC = [];
	- var layoutClasses= [];
	- var headerClasses = [];
	- var bodyClasses = [];
	- var footerClasses = [];
	block pages
    
	body(class=`${bodyC}`)
		if layout
			div(class=`${layoutClasses}`)
				block layout
				if header
					header(class=`${headerClasses}`)
						block header
				div(class=`${bodyClasses}`)
					block body
				if footer
					footer(class=`${footerClasses}`)
						block footer

		#cd-nav
			a.logo(href="index.html")
				img(src='images/xone-black.png')
			a.cd-nav-trigger: span
			#cd-main-nav: ul#navBar.list-unstyled
				li: a#introlink_mb Xone Radio Star
				li: a#joining_mb Đối tượng tham gia
				li: a#career_mb Quy trình tuyển dụng
				li: a#about_mb Nói về Xone
				li: a#contactlink_mb Kết nối
				li: a(href="register.html") Ứng tuyển ngay
			.bg-yello-overlay

		if modal
			block modal

		// Include Plugin
		block javaScripts
			include javascript.pug
			
		block javaScripts extend
			