include config.pug
block setting
	- var header = true
	- var footer = true
	- var modal = true

doctype
html(lang="en")
	head
		block head

	//- add class for wrapper
	- var bodyC = [];
	- var layoutClasses= [];
	- var headerClasses = [];
	- var bodyClasses = [];
	- var footerClasses = [];
	block pages
    
	body(class=`${bodyC}`)
		if layout
			div(class=`${layoutClasses}`)
				block layout
				if header
					header(class=`${headerClasses}`)
						block header
				div(class=`${bodyClasses}`)
					block body
				if footer
					footer(class=`${footerClasses}`)
						block footer

		#cd-nav
			a.cd-nav-trigger: span
			#cd-main-nav: ul#navBar.list-unstyled
				li: a(href="index.html#intro") Introduction
				li: a(href="index.html#speakers") Speakers
				li: a(href="index.html#agenda") Agenda	

		if modal
			block modal

		// Include Plugin
		block javaScripts
			include javascript.pug
			
		block javaScripts extend
			