extends layout.pug

//- Setting
block setting
	- var layout = true
	- var loading = false
	- var popperjs = true
	- var tippyjs = true
	- var moment = true
	- var daterangepicker = true
	- var popup = false
	- var modal = true
	- var header = false

block head
	include head.pug

block pages
	- bodyC.push("zad-v2")
	- layoutClasses.push("ad-desktop")
	- headerClasses.push("header")
	- bodyClasses.push("page-content is-popup")

//- Add Header
block header
	include page/header.pug

//- Add Body
block body
	include page/_page_setup_form.pug

//- Add Modal
block modal
	include page/modal_alert.pug

block javaScripts extend
	script.
		tippy('[data-tippy-content]',{});

		$(".heading-setup .func-edit").click(function(){
			$(".heading-setup .name").addClass("is-hidden");
			$(".heading-setup input").removeClass("is-hidden");
			$(".heading-setup input").focus();
		});
		$(".func-alert").click(function(){
			$("html").addClass("overlay-modal");
			$("#modal-alert").addClass("is-show");
		});
		$(".func-close-modal").click(function(){
			$("html").removeClass("overlay-modal");
			$(".modal-container").removeClass("is-show");
		});
